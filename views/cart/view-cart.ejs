<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="/css/cart/cart.css"> <!-- Include your custom CSS here -->
    <title>My Cart</title>
</head>
<body>
    <%- include('../header.ejs') %>
    <div class="container mt-5">
        <h1>My Cart</h1>

        <div class="row1">
            <div class="col-md-8">
                <ul class="list-group" id="cart-list">
                    <!-- Cart items will be dynamically added here -->
                </ul>
                <div class="pagination">
                    <button id="prev-page">Prev</button>
                    <div id="page-num-container"></div>
                    <button id="next-page">Next</button>
                </div>
            </div>
        </div>
    </div>
    <script>const cart = '<%- JSON.stringify(cart) %>'; </script>
    <script src="/js/view-cart.js"></script>
    <script>
        async function removeFromCart(cartItemId) {
            try {
                const response = await fetch(`/cart/remove-from-cart/${cartItemId}`, {
                    method: 'DELETE',
                });

                if (response.ok) {
                    // Reload the page to reflect the updated cart
                    location.reload();
                } else {
                    // Handle error (e.g., display an error message)
                    alert('Error removing book from cart.');
                }
            } catch (error) {
                console.error('Error removing from cart:', error);
                alert('Error removing book from cart.');
            }
        }
    </script>
</body>
</html>
